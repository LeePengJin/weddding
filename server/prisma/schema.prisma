// Couple inherits identity from User via 1:1 relation using the same id
model Couple {
  userId    String   @id
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  conversations Conversation[]
  weddingProject WeddingProject[]
}

// Vendor inherits identity from User via 1:1 relation using the same id
model Vendor {
  userId               String                @id
  user                 User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  category             VendorCategory
  location             String?
  description          String?
  verificationDocuments String[]             @default([])
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  serviceListings      ServiceListing[]
  conversations        Conversation[]
}

// Initial set of categories; we keep OTHER to allow future expansion
enum VendorCategory {
  Photographer
  Videographer
  Venue
  Caterer
  Florist
  DJ_Music
  Other
}

// Service offered by a Vendor
model ServiceListing {
  id            String          @id @default(uuid())
  vendorId      String
  vendor        Vendor          @relation(fields: [vendorId], references: [userId], onDelete: Cascade)
  name          String
  description   String?
  category      VendorCategory
  price         Decimal         @db.Decimal(12, 2)
  images        String[]        @default([])
  isActive      Boolean         @default(true)
  averageRating Decimal?        @db.Decimal(3, 2)
  has3DModel    Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  packages      WeddingPackage[]

  @@index([vendorId])
  @@index([isActive])
}

// Separate table for platform administrators (not part of end-user accounts)
model SystemAdmin {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  passwordHash   String
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Two-party conversation between Users (couple or vendor accounts)
model Conversation {
  id        String   @id @default(uuid())
  coupleId  String
  vendorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  couple Couple @relation(fields: [coupleId], references: [userId], onDelete: Cascade)
  vendor Vendor @relation(fields: [vendorId], references: [userId], onDelete: Cascade)
  messages Message[]

  @@index([coupleId])
  @@index([vendorId])
  @@unique([coupleId, vendorId])
}

model Message {
  id              String       @id @default(uuid())
  conversationId  String
  senderId        String
  content         String
  timestamp       DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, timestamp])
  @@index([senderId])
}

// Wedding Package composed of multiple service listings
model WeddingPackage {
  id            String           @id @default(uuid())
  packageName   String
  description   String?
  price         Decimal          @db.Decimal(12, 2)
  previewImage  String?
  services      ServiceListing[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  weddingProjects WeddingProject[]

  @@index([packageName])
}

// Wedding project owned by a Couple
model WeddingProject {
  id             String        @id @default(uuid())
  coupleId       String
  projectName    String
  weddingDate    DateTime
  weddingType    WeddingType
  basePackageId  String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  couple       Couple          @relation(fields: [coupleId], references: [userId], onDelete: Cascade)
  basePackage  WeddingPackage? @relation(fields: [basePackageId], references: [id], onDelete: SetNull)

  @@index([coupleId])
  @@index([weddingDate])
  @@unique([coupleId, projectName])
}

enum WeddingType {
  self_organized
  prepackaged
}
