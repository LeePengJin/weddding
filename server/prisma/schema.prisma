generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id
  name           String?
  email          String     @unique
  passwordHash   String
  contactNumber  String?
  profilePicture String?
  role           UserRole   @default(couple)
  status         UserStatus @default(pending_verification)
  blockReason    String?    // Reason for blocking (only set when status is blocked)
  blockedAt      DateTime?  // When the account was blocked
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  couple         Couple?
  vendor         Vendor?
  messagesSent   Message[]
  reviews        Review[]
}

model OtpToken {
  id         String    @id @default(uuid())
  email      String
  code       String
  purpose    String // 'register' | 'reset'
  payload    Json?
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime  @default(now())

  @@index([email, purpose])
  @@index([expiresAt])
}

enum UserRole {
  couple
  vendor
}

enum UserStatus {
  active
  inactive
  pending_verification
  rejected
  blocked
}

// TODO: Add models table-by-table following data dictionary exactly
