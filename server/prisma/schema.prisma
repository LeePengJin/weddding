// Couple inherits identity from User via 1:1 relation using the same id
model Couple {
  userId    String   @id
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  conversations Conversation[]
  weddingProject WeddingProject[]
  bookings       Booking[]
}

// Vendor inherits identity from User via 1:1 relation using the same id
model Vendor {
  userId               String                @id
  user                 User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  category             VendorCategory
  location             String?
  description          String?
  verificationDocuments String[]             @default([])
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  serviceListings      ServiceListing[]
  conversations        Conversation[]
  bookings             Booking[]
  timeSlots            TimeSlot[]
  designElements       DesignElement[]
}

// Initial set of categories; we keep OTHER to allow future expansion
enum VendorCategory {
  Photographer
  Videographer
  Venue
  Caterer
  Florist
  DJ_Music
  Other
}

// Service offered by a Vendor
model ServiceListing {
  id              String          @id @default(uuid())
  vendorId        String
  vendor          Vendor          @relation(fields: [vendorId], references: [userId], onDelete: Cascade)
  name            String
  description     String?
  category        VendorCategory
  customCategory  String?         // Custom category name when category is "Other"
  price           Decimal         @db.Decimal(12, 2)
  images          String[]        @default([])
  isActive        Boolean         @default(true)
  averageRating   Decimal?        @db.Decimal(3, 2)
  has3DModel      Boolean         @default(false)
  designElementId String?         // For single-model listings (optional)
  availabilityType ServiceAvailabilityType @default(exclusive)
  maxQuantity      Int?           // For quantity_based services

  // Pricing model for this listing
  pricingPolicy PricingPolicy @default(fixed_package)
  hourlyRate    Decimal?      @db.Decimal(12, 2) // For time_based pricing
  tieredPricing Json?                     // For tiered_package pricing rules

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  designElement  DesignElement? @relation(fields: [designElementId], references: [id], onDelete: SetNull)
  reviews        Review[]
  selectedServices SelectedService[]
  projectServices ProjectService[] // Services added to projects (before booking)
  serviceAvailability ServiceAvailability[]
  components    ServiceComponent[] // Bundle composition (for multi-element services)
  packageItems  WeddingPackageItem[]
  packagePlacements PackagePlacedElement[]
  venueProjects  WeddingProject[] @relation("ProjectVenue") // Projects that selected this service as venue
  packageDesigns PackageDesign[] @relation("PackageDesignVenue") // Package templates using this venue

  @@index([vendorId])
  @@index([isActive])
}

// Separate table for platform administrators (not part of end-user accounts)
model SystemAdmin {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  passwordHash   String
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Two-party conversation between Users (couple or vendor accounts)
model Conversation {
  id              String    @id @default(uuid())
  coupleId        String
  vendorId        String
  coupleLastReadAt DateTime?
  vendorLastReadAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  couple Couple @relation(fields: [coupleId], references: [userId], onDelete: Cascade)
  vendor Vendor @relation(fields: [vendorId], references: [userId], onDelete: Cascade)
  messages Message[]

  @@index([coupleId])
  @@index([vendorId])
  @@unique([coupleId, vendorId])
}

model Message {
  id              String       @id @default(uuid())
  conversationId  String
  senderId        String
  content         String
  timestamp       DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, timestamp])
  @@index([senderId])
}

// Wedding Package composed of multiple service listings or generic slots
model WeddingPackage {
  id               String                @id @default(uuid())
  packageName      String
  description      String?
  previewImage     String?
  status           WeddingPackageStatus  @default(draft)
  lastValidatedAt  DateTime?
  invalidListingIds String[]             @default([])
  notes            String?
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  items            WeddingPackageItem[]
  design           PackageDesign?
  weddingProjects  WeddingProject[]

  @@index([packageName])
  @@index([status])
}

model WeddingPackageItem {
  id                     String           @id @default(uuid())
  packageId              String
  serviceListingId       String?
  label                  String
  category               VendorCategory
  isRequired             Boolean          @default(true)
  minPrice               Decimal?         @db.Decimal(12, 2)
  maxPrice               Decimal?         @db.Decimal(12, 2)
  serviceListingSnapshot Json?
  replacementTags        String[]         @default([])
  notes                  String?
  healthStatus           WeddingPackageItemStatus @default(ok)
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt

  package        WeddingPackage  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  serviceListing ServiceListing? @relation(fields: [serviceListingId], references: [id], onDelete: SetNull)

  @@index([packageId])
  @@index([serviceListingId])
}

enum WeddingPackageStatus {
  draft
  published
  needs_vendor_updates
  archived
}

enum WeddingPackageItemStatus {
  ok
  missing_listing
  listing_inactive
  vendor_inactive
  vendor_blocked
}

model PackageDesign {
  id                 String        @id @default(uuid())
  packageId          String        @unique
  venueServiceListingId String?    // The venue service listing used for this template
  venueName          String?
  layoutData         Json?
  cameraPositionId   String?
  zoomLevel          Float?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  package            WeddingPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
  venueServiceListing ServiceListing? @relation("PackageDesignVenue", fields: [venueServiceListingId], references: [id], onDelete: SetNull)
  cameraPosition     Coordinates?   @relation(fields: [cameraPositionId], references: [id], onDelete: SetNull)
  placedElements     PackagePlacedElement[]
}

model PackagePlacedElement {
  id                String        @id @default(uuid())
  packageDesignId   String
  designElementId   String
  serviceListingId  String?
  positionId        String
  rotation          Float?
  isLocked          Boolean       @default(false)
  metadata          Json?

  packageDesign PackageDesign @relation(fields: [packageDesignId], references: [id], onDelete: Cascade)
  designElement DesignElement @relation(fields: [designElementId], references: [id], onDelete: Cascade)
  serviceListing ServiceListing? @relation(fields: [serviceListingId], references: [id], onDelete: SetNull)
  position      Coordinates   @relation(fields: [positionId], references: [id], onDelete: Cascade)

  @@index([packageDesignId])
  @@index([designElementId])
  @@index([serviceListingId])
}

// Wedding project owned by a Couple
model WeddingProject {
  id             String        @id @default(uuid())
  coupleId       String
  projectName    String
  weddingDate    DateTime
  weddingType    WeddingType
  basePackageId  String?
  // Link selected venue service listing (specific ballroom/venue space)
  venueServiceListingId String?
  status         ProjectStatus  @default(draft)
  lastAvailabilityCheck DateTime?
  // Event time window for time-based pricing calculations
  eventStartTime DateTime?
  eventEndTime   DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  couple       Couple          @relation(fields: [coupleId], references: [userId], onDelete: Cascade)
  basePackage  WeddingPackage? @relation(fields: [basePackageId], references: [id], onDelete: SetNull)
  venueServiceListing ServiceListing? @relation("ProjectVenue", fields: [venueServiceListingId], references: [id], onDelete: SetNull)
  budget       Budget?
  venueDesign  VenueDesign?
  tasks        Task[]
  bookings     Booking[]
  projectServices ProjectService[] // Services added to project (before booking)

  @@index([coupleId])
  @@index([weddingDate])
  @@index([venueServiceListingId])
  @@unique([coupleId, projectName])
}

// Services added to a project (before booking) - for non-3D services or services not yet placed
model ProjectService {
  id               String   @id @default(uuid())
  projectId        String
  serviceListingId String
  quantity         Int      @default(1)
  // Booking lifecycle flags
  isBooked         Boolean  @default(false)
  bookingId        String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  project        WeddingProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  serviceListing ServiceListing @relation(fields: [serviceListingId], references: [id], onDelete: Cascade)
  booking        Booking?       @relation(fields: [bookingId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([serviceListingId])
  @@unique([projectId, serviceListingId]) // One entry per service per project
}

enum WeddingType {
  self_organized
  prepackaged
}

// Project lifecycle for couple-side planning
enum ProjectStatus {
  draft
  ready_to_book
  booked
}

enum BookingStatus {
  pending_vendor_confirmation
  pending_deposit_payment
  confirmed
  pending_final_payment
  cancelled
  rejected
  completed
}

enum PaymentType {
  deposit
  final
}

enum PaymentMethod {
  credit_card
  bank_transfer
  touch_n_go
}

enum TimeSlotStatus {
  booked
  personal_time_off
}

enum ServiceAvailabilityType {
  exclusive       // One booking per date (e.g., single ballroom)
  reusable        // Multiple bookings allowed (e.g., bouquets)
  quantity_based  // Track available quantity (e.g., tables)
}

enum PricingPolicy {
  per_unit        // General per-unit pricing (e.g., per guest, per chair)
  per_table       // Units = number of tables placed in design (e.g., centerpieces)
  fixed_package   // Fixed price package per booking
  tiered_package  // Tiered pricing based on quantity or hours
  time_based      // Time-based pricing (e.g., hourly)
}

model ServiceAvailability {
  id                String   @id @default(uuid())
  serviceListingId  String
  date              DateTime @db.Date
  availabilityType  ServiceAvailabilityType
  maxQuantity       Int?
  availableQuantity Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  serviceListing ServiceListing @relation(fields: [serviceListingId], references: [id], onDelete: Cascade)

  @@unique([serviceListingId, date])
  @@index([serviceListingId, date])
}

// Bundle composition: defines what makes up 1 unit of a service listing
model ServiceComponent {
  id               String @id @default(uuid())
  serviceListingId String
  designElementId  String? // Optional - component can exist without 3D model
  quantityPerUnit  Int    @default(1) // e.g., 1 table or 10 chairs per set
  role             String? // Optional label for UI (e.g., "table", "chair")

  serviceListing ServiceListing @relation(fields: [serviceListingId], references: [id], onDelete: Cascade)
  designElement  DesignElement?  @relation(fields: [designElementId], references: [id], onDelete: SetNull)

  @@index([serviceListingId])
  @@index([designElementId])
}

// 3D design: basic coordinates used for positions and camera
model Coordinates {
  id String @id @default(uuid())
  x  Float
  y  Float
  z  Float
  cameraFor    VenueDesign[]
  positionsFor PlacedElement[]
  packageCameraFor PackageDesign[]
  packagePositionsFor PackagePlacedElement[]
}

// Library of reusable 3D elements
model DesignElement {
  id         String           @id @default(uuid())
  vendorId   String           // Owner vendor
  vendor     Vendor           @relation(fields: [vendorId], references: [userId], onDelete: Cascade)
  name       String?
  elementType String?
  modelFile  String
  
  // Physical properties for 3D scaling and behavior
  dimensions Json?            // { width: number, height: number, depth: number } in meters
  isStackable Boolean         @default(false)

  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  services   ServiceListing[]  // Single-model listings (via designElementId)
  placements PlacedElement[]
  packagePlacements PackagePlacedElement[]
  components ServiceComponent[] // Bundle components (inverse relation)

  @@index([vendorId])
}

// A venue design (scene) for a project
model VenueDesign {
  id               String        @id @default(uuid())
  projectId        String        @unique
  venueName        String
  layoutData       Json?
  cameraPositionId String?
  zoomLevel        Float?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  project       WeddingProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  cameraPosition Coordinates?   @relation(fields: [cameraPositionId], references: [id], onDelete: SetNull)
  placedElements PlacedElement[]
}

// Instance of a DesignElement placed inside a VenueDesign
model PlacedElement {
  id            String        @id @default(uuid())
  venueDesignId String
  designElementId String      // Required - only for 3D visualizations
  positionId    String
  rotation      Float?
  isLocked      Boolean       @default(false)

  // Booking lifecycle flags
  isBooked   Boolean  @default(false)
  bookingId  String?

  // Pricing-related metadata
  serviceListingIds String[]  @default([]) // IDs of services this element is tagged for
  elementType       String?   // e.g., "table", "chair", "stage"

  venueDesign   VenueDesign   @relation(fields: [venueDesignId], references: [id], onDelete: Cascade)
  designElement DesignElement @relation(fields: [designElementId], references: [id], onDelete: Cascade)
  position      Coordinates   @relation(fields: [positionId], references: [id], onDelete: Cascade)
  booking       Booking?      @relation(fields: [bookingId], references: [id], onDelete: SetNull)

  @@index([venueDesignId])
  @@index([designElementId])
}

// Budgeting for a project
model Budget {
  id             String           @id @default(uuid())
  projectId      String           @unique
  totalBudget    Decimal          @db.Decimal(12, 2)
  totalSpent     Decimal          @db.Decimal(12, 2) @default(0)
  totalRemaining Decimal          @db.Decimal(12, 2) @default(0)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  project        WeddingProject   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  categories     BudgetCategory[]
}

model BudgetCategory {
  id          String     @id @default(uuid())
  budgetId    String
  categoryName String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  budget      Budget     @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  expenses    Expense[]

  @@index([budgetId])
}

model Expense {
  id            String    @id @default(uuid())
  categoryId    String
  expenseName   String
  estimatedCost Decimal   @db.Decimal(12, 2)
  actualCost    Decimal?  @db.Decimal(12, 2)
  remark        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  category      BudgetCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
}

// Tasks for a wedding project
model Task {
  id          String       @id @default(uuid())
  projectId   String
  taskName    String
  description String?
  dueDate     DateTime?
  isCompleted Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  project   WeddingProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  subtasks  Subtask[]

  @@index([projectId])
  @@index([isCompleted])
  @@index([dueDate])
}

model Subtask {
  id          String   @id @default(uuid())
  taskId      String
  description String?
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model Booking {
  id               String        @id @default(uuid())
  coupleId         String
  projectId        String?
  vendorId         String
  bookingDate      DateTime      @default(now())
  reservedDate     DateTime
  status           BookingStatus @default(pending_vendor_confirmation)
  depositDueDate   DateTime?
  finalDueDate     DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  couple          Couple         @relation(fields: [coupleId], references: [userId], onDelete: Cascade)
  project         WeddingProject? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  vendor          Vendor         @relation(fields: [vendorId], references: [userId], onDelete: Cascade)
  selectedServices SelectedService[]
  payments        Payment[]
  reviews         Review[]
  placedElements  PlacedElement[]
  projectServices ProjectService[]

  @@index([coupleId])
  @@index([projectId])
  @@index([vendorId])
  @@index([reservedDate])
}

model SelectedService {
  id               String   @id @default(uuid())
  bookingId        String
  serviceListingId String
  quantity         Int      @default(1)
  totalPrice       Decimal  @db.Decimal(12, 2)

  booking        Booking        @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  serviceListing ServiceListing @relation(fields: [serviceListingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([serviceListingId])
}

model Payment {
  id              String        @id @default(uuid())
  bookingId       String
  paymentType     PaymentType
  amount          Decimal       @db.Decimal(12, 2)
  paymentMethod   PaymentMethod
  paymentDate     DateTime      @default(now())
  receipt         String?
  releasedToVendor Boolean      @default(false)
  releasedAt      DateTime?
  releasedBy      String?       // Admin ID who released the payment

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([releasedToVendor])
}

model Review {
  id               String   @id @default(uuid())
  bookingId        String
  serviceListingId String
  reviewerId       String
  rating           Int
  comment          String?
  reviewDate       DateTime @default(now())

  booking        Booking        @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  serviceListing ServiceListing @relation(fields: [serviceListingId], references: [id], onDelete: Cascade)
  reviewer       User           @relation(fields: [reviewerId], references: [id], onDelete: Cascade)

  @@index([serviceListingId])
  @@index([reviewerId])
}

// Vendor availability/booking calendar
// Stores only unavailable dates (if date exists here, vendor is unavailable that day)
model TimeSlot {
  id        String         @id @default(uuid())
  vendorId  String
  date      DateTime       @db.Date
  status    TimeSlotStatus
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  vendor Vendor @relation(fields: [vendorId], references: [userId], onDelete: Cascade)

  @@index([vendorId])
  @@index([date])
  @@index([vendorId, status])
  @@unique([vendorId, date])
}
